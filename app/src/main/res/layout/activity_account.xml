<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/account"
    android:background="#FFFDE7">

    <View
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:background="@drawable/circle_shape"
        android:backgroundTint="#FFB74D"
        android:alpha="0.8"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="-80dp"
        android:layout_marginEnd="-40dp"/>

    <View
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:background="@drawable/circle_shape"
        android:backgroundTint="#F57F17"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="-90dp"
        android:layout_marginEnd="-90dp"/>

    <View
        android:layout_width="280dp"
        android:layout_height="280dp"
        android:background="@drawable/circle_shape"
        android:backgroundTint="#FFB74D"
        android:alpha="0.8"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="-80dp"
        android:layout_marginStart="-60dp"/>

    <View
        android:layout_width="220dp"
        android:layout_height="220dp"
        android:background="@drawable/circle_shape"
        android:backgroundTint="#F57F17"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="-90dp"
        android:layout_marginStart="-90dp"/>

    <!-- MAIN CONTENT -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="30dp"
        android:layout_centerInParent="true"
        android:layout_marginTop="-20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome to"
            android:textSize="30sp"
            android:textStyle="bold"
            android:textColor="#FFB74D"
            android:layout_marginBottom="6dp"/>

        <ImageView
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:src="@drawable/qqstock"
            android:adjustViewBounds="true"
            android:layout_marginBottom="22dp"
            android:contentDescription="QuickStock Logo"/>

        <!-- STORE BUTTON -->
        <LinearLayout
            android:id="@+id/btnStore"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:background="@drawable/bg_orange_pill"
            android:elevation="6dp"
            android:layout_marginBottom="18dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/element5"
                android:layout_marginEnd="12dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Continue as Store"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:textStyle="bold"/>
        </LinearLayout>

        </LinearLayout>

</RelativeLayout>