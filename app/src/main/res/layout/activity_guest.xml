<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFDE7"
    android:fillViewport="true"
    android:id="@+id/main"> <!-- Adding ID to apply window insets -->

    <!-- Back Button -->
    <ImageButton
        android:id="@+id/btnBack"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:src="@android:drawable/ic_menu_revert"
        android:background="?android:attr/selectableItemBackground"
        android:contentDescription="Back"
        android:padding="10dp"
        android:focusable="true"
        android:focusableInTouchMode="true" />

    <!-- ScrollView for the main content -->
    <ScrollView
        android:layout_below="@id/btnBack"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:padding="30dp">


            <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:background="@drawable/element2"
                app:tint="#F57F17"
                android:scaleType="fitCenter"/>
            <View
                android:layout_width="100dp"
                android:layout_height="20dp"
                android:background="@drawable/shadow_oval"
                android:layout_marginTop="-10dp"
                android:alpha="0.6"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Find Nearby Stores"
                android:textSize="28sp"
                android:textStyle="bold"
                android:textColor="#333333"
                android:layout_marginTop="20dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dasma"
                android:textSize="18sp"
                android:textColor="#666666"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="40dp"/>

            <!-- Barangay Spinner -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="24dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Select Barangay:"
                    android:textColor="#555555"
                    android:textSize="14sp"
                    android:layout_marginBottom="8dp"/>
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    app:cardCornerRadius="25dp"
                    app:cardElevation="4dp"
                    app:cardBackgroundColor="#FFFFFF">
                    <Spinner
                        android:id="@+id/spinnerBarangay"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp"/>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@android:drawable/arrow_down_float"
                        app:tint="#333333"
                        android:layout_gravity="center_vertical|end"
                        android:layout_marginEnd="16dp"/>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <!-- Stores Spinner -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="50dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Select Stores:"
                    android:textColor="#555555"
                    android:textSize="14sp"
                    android:layout_marginBottom="8dp"/>
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    app:cardCornerRadius="25dp"
                    app:cardElevation="4dp"
                    app:cardBackgroundColor="#FFFFFF">
                    <Spinner
                        android:id="@+id/spinnerStores"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp"/>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@android:drawable/arrow_down_float"
                        app:tint="#333333"
                        android:layout_gravity="center_vertical|end"
                        android:layout_marginEnd="16dp"/>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <!-- Proceed Button -->
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnProceed"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:text="Proceed"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:textSize="18sp"
                android:background="@drawable/bg_orange_pill"
                android:elevation="6dp"
                android:stateListAnimator="@null" />

        </LinearLayout>
    </ScrollView>
</RelativeLayout>
